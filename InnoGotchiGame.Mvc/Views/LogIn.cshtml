@{
    Layout = "~/Views/Shared/_UnauthorizedLayout.cshtml";
}

<script src="~/js/auth.js"></script>
<div class="container">
    <form class="col-4 mx-auto mt-5">
        <h3 class="d-flex justify-content-center my-4">Login</h3>
        <!-- Email input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="email-input">Email address</label>
            <input type="email" id="email-input" class="form-control" />
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="password-input">Password</label>
            <input type="password" id="password-input" class="form-control" />
        </div>

        <!-- Submit button -->
        <div class="d-flex justify-content-center my-2">
            <button type="button" onclick="submitLoginForm();" class="btn btn-primary col-4 mb-4" id="login-button">Sign in</button>
        </div>

        <!-- Register buttons -->
        <div class="text-center">
            <p>Not a member? <a href="/reg">Register</a></p>
        </div>
    </form>
</div>