<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css">
</head>
    <body>
        <div class="container">
            <div class="row">
                <ul class="nav nav-tabs nav-justified">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="?farmsType=mine">My Farm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="?farmsType=friends">Friend's Farms</a>
                    </li>
                </ul>
                <div class="container my-farm-overview">
                    @if (@ViewBag.MyFarm != null)
                    {
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@ViewBag.MyFarm.Name</h5>
                                <p class="card-text">AlivePetsCount: @ViewBag.MyFarm.AlivePetsCount</p>
                                <p class="card-text">AlivePetsCount: @ViewBag.MyFarm.DeadPetsCount</p>
                                <p class="card-text">AlivePetsCount: @ViewBag.MyFarm.AverageFeedingTime</p>
                                <p class="card-text">AlivePetsCount: @ViewBag.MyFarm.AverageThirstQuenchingTime</p>
                                <p class="card-text">AlivePetsCount: @ViewBag.MyFarm.AverageHappinessDaysCount</p>
                                <p class="card-text">AlivePetsCount: @ViewBag.MyFarm.AveragePetsAge</p>
                                <a href="/farms/farm/@ViewBag.MyFarm.Id" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div> 
                    }
                </div>
                <div class="container friend-farms-overview">
                    @foreach (var farm in ViewBag.FriendFarms)
                    {
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@ViewBag.MyFarm.Name</h5>
                                <p class="card-text">AlivePetsCount: @ViewBag.MyFarm.AlivePetsCount</p>
                                <p class="card-text">AlivePetsCount: @ViewBag.MyFarm.DeadPetsCount</p>
                                <p class="card-text">AlivePetsCount: @ViewBag.MyFarm.AverageFeedingTime</p>
                                <p class="card-text">AlivePetsCount: @ViewBag.MyFarm.AverageThirstQuenchingTime</p>
                                <p class="card-text">AlivePetsCount: @ViewBag.MyFarm.AverageHappinessDaysCount</p>
                                <p class="card-text">AlivePetsCount: @ViewBag.MyFarm.AveragePetsAge</p>
                                <a href="/farms/farm/@ViewBag.MyFarm.Id" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </body>
</html>